<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="138dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="150dp"
            android:layout_height="88dp"
            app:srcCompat="@mipmap/barkita" />

        <TextView
            android:id="@+id/teamName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shadowColor="#FFFFFF"
            android:text="                   FC Barcelona"
            android:textColor="#FFFFFF"
            android:textSize="28sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="422dp"
        android:layout_height="42dp">

        <TextView
            android:id="@+id/teamName2"
            android:layout_width="137dp"
            android:layout_height="wrap_content"
            android:shadowColor="#FFFFFF"
            android:text="Noticias"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/Temporada"
            android:layout_width="137dp"
            android:layout_height="wrap_content"
            android:shadowColor="#FFFFFF"
            android:text="Temporada"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/plantilla"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:shadowColor="#FFFFFF"
            android:text="Plantilla"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="413dp"
            android:layout_height="507dp"
            android:orientation="vertical">


            <Button
                android:id="@+id/btn1"
                android:layout_width="match_parent"
                android:layout_height="101dp"
                android:text="BRILLANTES: Ansu Fati y Pedri lideraron en el intento de remontada" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="413dp"
                android:layout_height="101dp"
                android:layout_weight="1"
                android:text="El Dynamo de Kiev se presentará en el Camp Nou sin porteros " />

            <Button
                android:id="@+id/btn3"
                android:layout_width="match_parent"
                android:layout_height="101dp"
                android:text="La salida de Bartomeu no ha cambiado los planes del Barça con Eric García" />

            <Button
                android:id="@+id/btn4"
                android:layout_width="match_parent"
                android:layout_height="101dp"
                android:text="El Barça ganó la Liga con comienzos casi tan horribles como el de este 2020 " />

            <Button
                android:id="@+id/btn5"
                android:layout_width="match_parent"
                android:layout_height="101dp"
                android:text="El peor arranque goleador de la carrera de Messi: Solo 1 gol en 6 partidos de Liga " />


        </LinearLayout>
    </ScrollView>


</LinearLayout>